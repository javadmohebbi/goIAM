

# goIAM Configuration Environment Variables

# Server configuration
IAM_PORT=8080                        # Port the server listens on
IAM_DEBUG=false                      # Enable debug mode (true/false)

# Configuration file override
IAM_CONFIG_PATH=./config.yaml        # Path to the YAML config file

# Database settings
IAM_DATABASE=sqlite                  # Database engine: sqlite, postgres, mysql, etc.
IAM_DATABASE_DSN=goiam.db            # Data source name (DSN) for the database

# Authentication provider
IAM_AUTH_PROVIDER=local              # Comma-separated list of auth providers (e.g., local,ldap)